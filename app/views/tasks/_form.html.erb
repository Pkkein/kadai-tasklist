<div class="row">
  <div class="col-lg-offset-3 col-lg-6 col-sm-offset-2 col-sm-8">
    <%= form_for(task) do |f| %>
      <% if task.errors.any? %>
        <div class="alert alert-warning">
          <ul>
            <% task.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="form-group">
        <%= f.label :content, '新しいタスク' %>
        <%= f.text_field :content ,class: 'form-control' %>
      </div>
  
      <div class="form-group">
        <%= f.label :status, '状態' %>
        <%= f.select :status, [["完了", "完了"], ["未完", "未完"]],  :prompt => "----" ,class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.submit '追加' , class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
<h1>ID : <%= @task.id %>のタスク</h1>

<table class = "table table-bordered">
  <tr>
    <th>タスク</th>
    <td><%= @task.content%></td>
  </tr>
  <tr>
    <th>状態</th>
    <td><%= @task.status%></td>
  </tr>
</table>

<%= link_to 'タスクを編集する' , edit_task_path(@task) , class: "btn btn-default" %>
<%= link_to 'タスクを削除する' , @task, method: :delete, data: { confirm: '本当に削除しますか？' } , class: "btn btn-danger" %>
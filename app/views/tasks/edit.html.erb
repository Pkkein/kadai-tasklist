<div class="text-center">
  <h1>タスクの編集</h1>
</div>

<div class="row">
  <div class="col-lg-offset-3 col-lg-6 col-sm-offset-2 col-sm-8">
    <%= form_for(@task) do |f| %>
      
      <div class="form-group">
        <%= f.label :content, 'タスク' %>
        <%= f.text_field :content ,class: 'form-control' %>
      </div>
  
      <div class="form-group">
        <%= f.label :status, '状態' %>
        <%= f.select :status, [["完了", "完了"], ["未完", "未完"]],  :prompt => "----" ,class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.submit '編集' , class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>